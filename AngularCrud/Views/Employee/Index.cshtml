@model  IEnumerable<AngularDataAccess.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align:center">List of All Employee</h2>
<br><hr />
<div ng-controller="EmpController" >
    @* Use ng-controller *@
    <table class="table">
        <tr>
            <th>ID</th>
            <th>FirstName</th>
            <th>Surname</th>
            <th>IdentityType</th>
            <th>IdentityNumber</th>
            <th>Date Of Birth</th>
        </tr>
        <tr ng-repeat="emp in EmployeeService.GetEmployeeList()">
            @* Fetch All the Employee record using ng-repeat *@
            <td>{{emp.EmployeeId}}</td>
            <td>{{emp.FirstName}}</td>
            <td>{{emp.Surname}}</td>
            <td>{{emp.IdentityType}}</td>
            <td>{{emp.IdentityNumber}}</td>
            <td>{{emp.DateOfBirth}}</td>
            <td>
                <input type="button" class="btn btn-toolbar" value="Edit" ng-click="RedirectToEdit(emp)" /> |
                <input type="button" class="btn btn-success" value="Details" ng-click="RedirectToDetails(emp)" /> |
                <input type="button" class="btn btn-warning" style="color:white" value="Delete" ng-click="DelEmployee(emp)" />
            </td>
        </tr>
        <tr>
            <td><p class="btn btn-primary"> @Html.ActionLink("Create New", "CreateEmployee", null, new { style = "color:white" }) </p></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </table>
</div>